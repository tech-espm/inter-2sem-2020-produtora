		}
		.container {
		position: relative;
		width: 100%;
		height: 500px;
		background-color: black;
		
		}

		.image {
		display: block;
		width: 100%;
		height: auto;
		}

		.overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background-color: rgb(240, 204, 137);
		opacity: 20%;
		overflow: hidden;
		width: 100%;
		height: 0;
		transition: .5s ease;

		}

		.container:hover .overlay {
		height: 100%;

		}

		.text {
		color: white;
		font-size: 20px;
		position: absolute;
		top: 50%;
		left: 50%;
		-webkit-transform: translate(-50%, -50%);
		-ms-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
		text-align: center;
		}
